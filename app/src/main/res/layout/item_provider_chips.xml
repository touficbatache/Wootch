<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:checkedChip="@id/movies_chip"
        app:selectionRequired="true"
        app:singleLine="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/movies_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_movies"
            android:textColor="?attr/colorOnBackground"
            app:chipBackgroundColor="@color/selector_chip_background_color"
            app:chipStrokeColor="@color/selector_chip_stoke_color"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/shows_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_shows"
            android:textColor="?attr/colorOnBackground"
            app:chipBackgroundColor="@color/selector_chip_background_color"
            app:chipStrokeColor="@color/selector_chip_stoke_color"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/anime_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_anime"
            android:textColor="?attr/colorOnBackground"
            app:chipBackgroundColor="@color/selector_chip_background_color"
            app:chipStrokeColor="@color/selector_chip_stoke_color"
            app:chipStrokeWidth="1dp" />

    </com.google.android.material.chip.ChipGroup>

</HorizontalScrollView>
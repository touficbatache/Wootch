<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.batache.wootch.ui.view.ObservableParallaxScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdgeLength="0dp"
        app:parallax_factor="1.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/parallax"
                android:layout_width="match_parent"
                android:layout_height="@dimen/parallax_header_height"
                android:background="@color/overlay">

                <ImageView
                    android:id="@+id/bg_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/parallax_header_height"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:transitionName="background"
                    android:visibility="invisible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/top_gradient" />

                <FrameLayout
                    android:id="@+id/back_btn_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/back_btn"
                        style="?attr/actionButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:autoMirrored="true"
                        android:src="@drawable/ic_arrow_back_24dp" />

                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/trailer_btn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Trailer"
                    android:textColor="?attr/colorOnBackground"
                    app:backgroundTint="@color/black_60_alpha"
                    app:cornerRadius="100dp"
                    app:icon="@drawable/ic_av_play"
                    app:iconTint="?attr/colorOnBackground"
                    app:strokeColor="?attr/colorOnBackground" />

            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" />

        </LinearLayout>

    </com.batache.wootch.ui.view.ObservableParallaxScrollView>

    <View
        android:id="@+id/status_bar_background"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:alpha="0"
        android:background="@color/colorBackground" />

</RelativeLayout>